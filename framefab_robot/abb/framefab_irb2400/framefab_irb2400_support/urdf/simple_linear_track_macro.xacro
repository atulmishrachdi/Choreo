<?xml version="1.0" ?>

<!--Generates a urdf from the macro in kr210_macro.xacro -->

<robot xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:property name="rail_cross_section" value="0.1"/>

<xacro:macro name="simple_linear_track" params="prefix">

  <link name="rail">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="4 ${rail_cross_section} ${rail_cross_section}"/>
      </geometry>
      <material name="yellow">
       <color rgba="1.0 1.0 0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="4 0.1 0.1"/>
      </geometry>
      <material name="yellow">
       <color rgba="1.0 1.0 0 1.0"/>
      </material>
    </collision>   
  </link>

  <joint name="rail_to_robot_base_link" type="prismatic">
    <parent link="rail" />
    <child link="base_link" />
    <origin xyz="0 0 ${0.5*rail_cross_section}"/>
    <axis xyz="1 0 0"/>
    <limit lower="-2" upper="2" effort="1" velocity="1"/>
  </joint>

</xacro:macro>
</robot>
